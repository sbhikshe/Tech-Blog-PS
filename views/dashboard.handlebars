<section class="container-fluid">
 
  {{#if posts }}
   <ul>
  {{#each posts as |post| }}
  <li class="card">
    <h5>
      {{post.title}}
    </h5>
    <p>
      {{post.contents}}
    </p>
    <p>
      Posted by: {{user.username}}
    </p>
    <p>
      At: {{post.postedAt}}
    </p>
    <div>
    <button onClick=>Comment</button>
    <button onclick="/post/{{post.id}}">Update</button>
    <button onClick=>Delete</button>
    </div>
  </li>
  {{/each}}
  </ul>
  <!--
  <div>
    <button id="addPost">Create a new post</button>
  </div>
  -->
  {{>createPost}}
  {{/if}}


  {{#unless posts}}
  <p>No posts to show for this user</p>
  {{>createPost}}
  {{/unless}}

</section>
<script src="/js/dashboard.js"></script>